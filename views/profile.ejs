<!doctype html>
<html>
<head>
    <title>Gardener Cafè</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css?family=Pacifico&display=swap&subset=cyrillic,cyrillic-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oswald:200,300,400,500,600,700&display=swap&subset=cyrillic,cyrillic-ext,latin-ext,vietnamese" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Gardener Cafè Barrìsta</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Barrista Profile Info</h3>

                <% if (user.local.email) { %>
                    <p>

                        <strong>Barrista name</strong>: <%= user.local.email %><br>

                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <h3>Orders</h3>
          <ul class="messages">
          <% for(var i=0; i<orders.length; i++) {%>
            <% if (orders[i].completed == false) {%>
            <li class="message">
              <span><%= orders[i].name %></span>
              <span><%= orders[i].order %></span>
              <span id = "done" class="btn btn-default">complete</span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
            <% } %>
          <% } %>
          </ul>



        <div class="col-sm-6">
          <h3>Completed</h3>
          <ul class="messages">
          <% for(var i=0; i<orders.length; i++) {%>
            <% if (orders[i].completed == true) {%>
            <li class="message">
              <span><%= orders[i].barrista %></span>
              <span>completed</span>
              <span><%= orders[i].name %></span>
              <span>for</span>
              <span><%= orders[i].order %></span>

              <span><i class="far fa-check-circle" aria-hidden="true"></i></span>
            </li>
            <% } %>
          <% } %>
          </ul>





</div>


<script src="main.js"></script>

</body>
</html>
